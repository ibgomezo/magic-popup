<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="magic_popup_confirm_cancel_popup_form" model="ir.ui.view">
        <field name="name">magic_popup.confirm_cancel_popup.form</field>
        <field name="model">magic_popup.confirm_cancel_popup</field>
        <field name="arch" type="xml">
            <form>
                <h3><field name="title" readonly="1"/></h3>
                <group>
                    <p>
                        <field name="message" readonly="1"/>
                    </p>
                </group>
                <footer>
                    <button name="continue_" string="Continue" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>